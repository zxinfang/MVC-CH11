@model WebApplication1.ViewModels.RegisterViewModel

@{
     ViewBag.Title = "Register";
}
<div class="form-horizontal">
    <h1>註冊</h1>
</div>
<div class="form-horizontal">
    @using (Html.BeginForm("Register", "Members", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="alert alert-warning">
            @Html.ValidationSummary()
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.newMember.Account, new { @class = "col-xs-4 col-md-10 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.newMember.Account, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newMember.Account, null, new { @class = "label label-group" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-xs-4 col-md-10 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-group" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PasswordCheck, new { @class = "col-xs-4 col-md-10 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(model => model.PasswordCheck, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PasswordCheck, null, new { @class = "label label-group" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.newMember.Name, new { @class = "col-xs-4 col-md-10 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.newMember.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newMember.Name, null, new { @class = "label label-group" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.newMember.Email, new { @class = "col-xs-4 col-md-10 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.newMember.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newMember.Email, null, new { @class = "label label-group" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MembersImage, new { @class = "col-xs-4 col-md-10 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(model => model.MembersImage, new { @class = "form-control",type = "file" })
                @Html.ValidationMessageFor(model => model.MembersImage, null, new { @class = "label label-group" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-11 col-md-10">
                <input class="btn btn-primary" type="submit" value="註冊" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
